ESC := "\x1b["

BLACK   := "0"
RED     := "1"
GREEN   := "2"
YELLOW  := "3"
BLUE    := "4"
MAGENTA := "5"
CYAN    := "6"
WHITE   := "7"
DEFAULT := "9"

RESET := "0"
BOLD := "1"
DIM := "2"
ITALIC := "3"
UNDERLINE := "4"
BLINKING := "5"
INVERT := "7"
HIDDEN := "8"
STRIKETHROUGH := "9"

fun cmd(code)
  write(ESC, code, "m")
end

fun fg(col)
  cat("3", col)
end

fun bg(col)
  cat("4", col)
end

fun bright-fg(col)
  cat("9", col)
end

fun bright-bg(col)
  cat("10", col)
end

fun fg-rgb(r, g, b)
  cat(ESC, "38;2;", r, ";", g, ";", b, "m")
end

fun bg-rgb(r, g, b)
  cat(ESC, "48;2;", r, ";", g, ";", b, "m")
end

