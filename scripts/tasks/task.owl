Status := {
  completed: "completed",
  pending: "pending",
  working: "working"
}

fun create-task(title, status)
  {
    :title,
    :status
  }
end

fun completed?(task)
  task.status eq "completed"
end

fun pending?(task)
  task.status eq "pending"
end

fun working?(task)
  task.status eq "working"
end

fun to-pending(task)
  task.status = Status.pending
  task
end

fun to-completed(task)
  task.status = Status.completed
  task
end

fun to-working(task)
  task.status = Status.working
  task
end

{
  :create-task
  :completed?
  :pending?
  :working?

  :to-pending
  :to-completed
  :to-working

  :Status
}

