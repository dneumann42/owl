use task

done := false
tasks := []

fun list-tasks()
  for task in items(tasks) do
    echo(task)
  end
end

fun create-task()
  title := read-line("title: ")
  task.create-task(title, task.Status.pending)
end

while not done do
  line := read-line("> ")

  cond
    line eq "q"     do done = true    end
    line eq "list"  do list-tasks()   end
    line eq "new"   do create-task()  end
  end
end

